@model IEnumerable<L2M.Models.Artist_Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.ArtistId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.AlbumId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-artistId="@item.ArtistId" asp-route-albumId="@item.AlbumId">Edit</a> |
                <a asp-action="Details" asp-route-artistId="@item.ArtistId" asp-route-albumId="@item.AlbumId">Details</a> |
                <a asp-action="Delete" asp-route-artistId="@item.ArtistId" asp-route-albumId="@item.AlbumId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
