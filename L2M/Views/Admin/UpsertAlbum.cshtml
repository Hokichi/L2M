                    </tr>
                    <tr>
                        <td><img src="~/admin/img/defaultImg.png" width="60" height="60" /></td>
                        <td>Dooley</td>
                        <td class="text-right"><a href="" class="btn btn-primary">Add to album</a></td>
                    </tr>
                    <tr>
                        <td><img src="~/admin/img/defaultImg.png" width="60" height="60" /></td>
                        <td>Ravendale</td>
                        <td class="text-right"><a href="" class="btn btn-primary">Add to album</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="list-song">
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Album</th>
                            <th>Audio</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
