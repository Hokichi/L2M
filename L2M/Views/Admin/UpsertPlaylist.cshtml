@{
    ViewBag.Title = "Add playlist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Playlist</h1>
    <a asp-controller="Admin" asp-action="Playlist" class="d-none d-sm-inline-block btn btn btn-primary shadow-sm">
        <i class="fas fa-long-arrow-alt-left text-white-50"></i><b> Back to list</b>
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Add playlist</h6>
    </div>
    <div class="card-body">
        <form class="formPlaylist" id="formPlaylist">
            <div class="row">
                <div class="form-group col-lg-3 col-sm-6">
                    <div class="upload_img">
                        <img src="~/admin/img/noimg.webp" class="img_name" id="imgPreview" />
                        <input type="file" name="img_name" accept="image/*" class="form-control" placeholder="Upload your image" id="photo">
                    </div>
                </div>
                <div class="col-lg-9 col-sm-6">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea id="edit-text" placeholder="Description" class="form-control" name="description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List songs of playlist</h6>
    </div>
    <div class="card-body">
        <div class="searchSong">
            <input class="form-control" id="searchSongInput" type="text" placeholder="Find song you want to add here">
            <table class="table table-borderless table-hover">
                <tbody id="tableSong">
                    <tr>
                        <td><img src="~/admin/img/defaultImg.png" width="60" height="60" /></td>
                        <td>BlackPink</td>
                        <td class="text-right"><a href="" class="btn btn-primary">Add to playlist</a></td>
                    </tr>
                    <tr>
                        <td><img src="~/admin/img/defaultImg.png" width="60" height="60" /></td>
                        <td>Moe</td>
                        <td class="text-right"><a href="" class="btn btn-primary">Add to playlist</a></td>
                    </tr>
                    <tr>
                        <td><img src="~/admin/img/defaultImg.png" width="60" height="60" /></td>
                        <td>Dooley</td>
                        <td class="text-right"><a href="" class="btn btn-primary">Add to playlist</a></td>
                    </tr>
                    <tr>
                        <td><img src="~/admin/img/defaultImg.png" width="60" height="60" /></td>
                        <td>Ravendale</td>
                        <td class="text-right"><a href="" class="btn btn-primary">Add to playlist</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="list-song">
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Album</th>
                            <th>Audio</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Album</th>
                            <th>Audio</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr>
                            <td><img src="~/admin/img/defaultImg.png" width="100" height="120" /></td>
                            <td>How you like that</td>
                            <td>The Album</td>
                            <td>
                                <audio controls="controls">
                                    <source src="~/admin/music/Thằng Điên_JustaTee, Phương Ly_-1078239770.mp3" type="audio/mp4" />
                                </audio>
                            </td>
                            <td>
                                <a class="btn btn-outline-danger" href=""> Remove</a>
                            </td>
                        </tr>
                        <tr>
                            <td><img src="~/admin/img/defaultImg.png" width="100" height="120" /></td>
                            <td>Pretty Savage</td>
                            <td>The Album</td>
                            <td>
                                <audio controls="controls">
                                    <source src="~/admin/music/Thằng Điên_JustaTee, Phương Ly_-1078239770.mp3" type="audio/mp4" />
                                </audio>
                            </td>
                            <td>
                                <a class="btn btn-outline-danger" href=""> Remove</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#searchSongInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#tableSong").toggle($(this).val().length != 0);
                $("#tableSong tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
