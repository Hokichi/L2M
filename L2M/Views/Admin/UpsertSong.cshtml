@{
    ViewBag.Title = "Add Song";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Song</h1>
    <a asp-controller="Admin" asp-action="Song" class="d-none d-sm-inline-block btn btn btn-primary shadow-sm">
        <i class="fas fa-long-arrow-alt-left text-white-50"></i><b> Back to list</b>
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Add song</h6>
    </div>
    <div class="card-body">
        <form class="formSong" id="formSong">
            <div class="row">
                <div class="form-group col-lg-3 col-sm-6">
                    <div class="upload_img">
                        <img src="~/admin/img/noimg.webp" class="img_name" id="imgPreview" />
                        <input type="file" name="img_name" accept="image/*" class="form-control" placeholder="Upload your image" id="photo">
                    </div>
                </div>
                <div class="form-group col-lg-9 col-sm-6">
                    <label>Audio upload</label>
                    <div class="file-upload row">
                        <div class="col-6">
                            <input type="file" name="fileAudio" value="" class="form-control" onchange="PreviewAudio(this, $('#audioPreview'))" />
                        </div>
                        <div class="col-6">
                            <audio controls="controls" id="audioPreview" style="display:none">
                                <source src="" type="audio/mp4" />
                            </audio>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" placeholder="Title">
                        </div>
                        <div class="form-group col-6">
                            <label for="duration">Duration</label>
                            <input type="text" name="duration" class="form-control" placeholder="Duration">
                        </div>
                        <div class="form-group col-6">
                            <label for="genre">Genre</label>
                            <select name="genre" class="custom-select">
                                <option selected>Select genre</option>
                                <option value="pop">Pop</option>
                                <option value="ballad">Ballad</option>
                            </select>
                        </div>
                        <div class="form-group col-6">
                            <label for="album">Album</label>
                            <select name="album" class="custom-select">
                                <option selected>Select album</option>
                                <option value="pop">Pop</option>
                                <option value="ballad">Ballad</option>
                            </select>
                        </div>
                        <div class="form-group col-6">
                            <label for="artist">Artist</label>
                            <select id="artist-select" class="custom-select" name="artist[]" multiple="multiple">
                                <option value="O1" data-badge="">Option1</option>
                                <option value="O2" data-badge="">Option2</option>
                                <option value="O3" data-badge="">Option3</option>
                                <option value="O4" data-badge="">Option4</option>
                                <option value="O5" data-badge="">Option5</option>
                                <option value="O6" data-badge="">Option6</option>
                                <option value="O7" data-badge="">Option7</option>
                                <option value="O8" data-badge="">Option8</option>
                                <option value="O9" data-badge="">Option9</option>
                                <option value="O10" data-badge="">Option10</option>
                                <option value="O11" data-badge="">Option11</option>
                                <option value="O12" data-badge="">Option12</option>
                                <option value="O13" data-badge="">Option13</option>
                            </select>
                        </div>
                        <div class="form-group col-6">
                            <label for="DateRelease">Date release</label>
                            <input type="date" name="DateRelease" class="form-control" placeholder="Date release">
                        </div>
                        <div class="form-group col-12">
                            <label for="lyrics">Lyrics</label>
                            <textarea id="edit-text" placeholder="Lyrics" class="form-control" name="lyrics"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Save</button>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
