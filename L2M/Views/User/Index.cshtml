@model L2M.Models.User
@{
    ViewBag.Title = "Tài khoản";
    List<Song> songs = ViewData["songs"] as List<Song>;
    List<Album> albums = ViewData["albums"] as List<Album>;
    List<Artist> artists = ViewData["artists"] as List<Artist>;
    List<Playlist> playlists = ViewData["playlists"] as List<Playlist>;
}
<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(img/bg-img/breadcumb.jpg);">
    <div class="bradcumbContent">
        <h2>Tài khoản</h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### Account Area Start ##### -->
<section class="account-area section-padding-100-0 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-3 text-center">
                <img src="@Url.Content(@Model.ImgUrl)" width="200" height="200" class="avata">
                <h5 class="mt-2">@Model.UserName</h5>
                <p>@Model.Email</p>
                <!-- <a href="#"><i>Chỉnh sửa</i></a> -->
            </div>
            <div class="col-12 col-lg-9">
                <div class="oneMusic-tabs-content">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs text-center" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#song">Bài hát</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#playlist">Playlist</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#artist">Artist</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#album">Album</a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div id="song" class="container tab-pane active">
                            <br>
                            @if (songs == null)
                            {
                                @:<p>Không có bài hát yêu thích</p>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Ảnh bìa</th>
                                                <th>Tên bài hát</th>
                                                <th>Ca sĩ</th>
                                                <th>Album</th>
                                                <th>Độ dài</th>
                                                <th>Thể loại</th>
                                                <th>Tác vụ</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Ảnh bìa</th>
                                                <th>Tên bài hát</th>
                                                <th>Ca sĩ</th>
                                                <th>Album</th>
                                                <th>Độ dài</th>
                                                <th>Thể loại</th>
                                                <th>Tác vụ</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>

                                            @foreach (var item in songs)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (item.ImgUrl == "")
                                                        {
                                                            @:<img src="" width="100" height="100" />
                                                        }
                                                        else
                                                        {
                                                            @:<img src="@Url.Content(item.ImgUrl)" width="100" height="100" />
                                                        }
                                                    </td>
                                                    <td>@item.Title</td>
                                                    <td>
                                                        @foreach (var item1 in item.Artists)
                                                        {
                                                            <a href="/Admin/Artists/Detail?id=@item1.ArtistId">@item1.Name</a>
                                                        }
                                                    </td>
                                                    <td>@item.Album?.Title</td>
                                                    <td>@item.Duration</td>
                                                    <td>@item.Genre?.Name</td>
                                                    <td>
                                                        <a class="text-secondary mr-lg-2" href="" data-toggle="modal" data-target="#lyricModal"><i class="fas fa-closed-captioning fa-lg"></i></a>&nbsp;
                                                        <a class="text-primary mr-lg-2" asp-action="Edit" asp-route-id="@item.SongId"><i class="fas fa-edit"></i></a>&nbsp;
                                                        <a class="text-danger" onclick="return Delete(event, 'bài hát', '@item.Title', '/Songs/Delete?id=@item.SongId')"><i class="fas fa-trash-alt"></i></a>
                                                        <!-- The Modal -->
                                                        <div class="modal fade" id="lyricModal">
                                                            <div class="modal-dialog modal-dialog-centered">
                                                                <div class="modal-content">

                                                                    <!-- Modal Header -->
                                                                    <div class="modal-header">
                                                                        <h4 class="modal-title">Lyrics</h4>
                                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                    </div>

                                                                    <!-- Modal body -->
                                                                    <div class="modal-body">
                                                                        <form class="form-group">
                                                                            <textarea id="edit-text" placeholder="Lyrics" class="form-control" name="Lyrics" values="@item.Lyrics"></textarea>
                                                                        </form>
                                                                    </div>

                                                                    <!-- Modal footer -->
                                                                    <div class="modal-footer">
                                                                        <button type="submit" class="btn btn-primary">Save</button>
                                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>}
                            </div>
                            <div id="playlist" class="container tab-pane fade">
                                <br>
                                <div class="row oneMusic-albums">
                                    @if (playlists == null)
                                    {
                                        @:<p>Không có playlist yêu thích</p>
                                    }
                                    else
                                    {
                                        @foreach (var item in playlists)
                                        {
                                            <div class="col-12 col-sm-4 col-md-3 col-lg-2 single-album-item t c p">
                                                <div class="single-album">
                                                    <img src="@Url.Content(item.ImgUrl)" alt="">
                                                    <div class="album-info">
                                                        <a href="/Playlist/Detail?id=@item.PlaylistId">
                                                            <h5>@item.Title</h5>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    }
                                </div>
                            </div>
                            <div id="artist" class="container tab-pane fade">
                                <br>
                                <div class="row oneMusic-albums">
                                    @if (artists == null)
                                    {
                                        @:<p>Không có ca sĩ yêu thích</p>
                                    }
                                    else
                                    {
                                        @foreach (var item in artists)
                                        {
                                            <div class="col-12 col-sm-4 col-md-3 col-lg-2 single-album-item t c p">
                                                <div class="single-album">
                                                    <img src="@Url.Content(item.ImgUrl)" alt="">
                                                    <div class="album-info">
                                                        <a href="/Album/Detail?id=@item.ArtistId">
                                                            <h5>@item.Name</h5>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }}
                                </div>
                            </div>
                            <div id="album" class="container tab-pane fade">
                                <br>
                                <div class="row oneMusic-albums">
                                    @if (albums == null)
                                    {
                                        @:<p>Không có album yêu thích</p>
                                    }
                                    else
                                    {
                                        @foreach (var item in albums)
                                        {
                                            <div class="col-12 col-sm-4 col-md-3 col-lg-2 single-album-item t c p">
                                                <div class="single-album">
                                                    <img src="@Url.Content(item.ImgUrl)" alt="">
                                                    <div class="album-info">
                                                        <a href="/Playlist/Detail?id=@item.AlbumId">
                                                            <h5>@item.Title</h5>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Account Area End ##### -->